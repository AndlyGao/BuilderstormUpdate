<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_bold_base_line"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_4"
    android:paddingBottom="@dimen/dimen_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSync"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:padding="@dimen/dimen_4"
            android:src="@drawable/selector_sync" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_2"
            android:paddingTop="@dimen/dimen_4"
            android:paddingEnd="@dimen/dimen_2"
            android:paddingBottom="@dimen/dimen_4" />

        <TextView
            android:id="@+id/tvCompletedFor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_2"
            android:paddingTop="@dimen/dimen_4"
            android:paddingEnd="@dimen/dimen_2"
            android:paddingBottom="@dimen/dimen_4" />

        <TextView
            android:id="@+id/tvIssuedBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_2"
            android:paddingTop="@dimen/dimen_4"
            android:paddingEnd="@dimen/dimen_2"
            android:paddingBottom="@dimen/dimen_4" />

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:padding="@dimen/dimen_4"
            android:visibility="gone"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/ivStatusInfo"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:padding="@dimen/dimen_4"
            android:src="@drawable/ic_info" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginEnd="@dimen/dimen_8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnComplete"
            style="@style/blueButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_4"
            android:layout_weight="1"
            android:text="Complete " />

        <Button
            android:id="@+id/btnIssue"
            style="@style/blueButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_weight="1"
            android:text="Issue " />

    </LinearLayout>
</LinearLayout>